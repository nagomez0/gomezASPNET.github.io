@model CustomerViewModel

@{
    ViewData["Title"] = "Orders";
}

<div class="container">
    <h1 style="border-bottom: none;">Orders</h1>
    <div class="row">
        <div class="col-md-6">
            <p><strong>Name:</strong> <br /> @Model.FullName</p>
        </div>
        <div class="col-md-6">
            <p><strong>Customer #:</strong> <br /> @Model.CustomerNumber</p>
        </div>
    </div>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Order ID</th>
                <th>Order Date</th>
                <th>Description</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model.Orders)
            {
                <tr>
                    <td>@order.OrderId</td>
                    <td>@order.OrderDate.ToString("MM-dd-yyyy h:mm:ss tt")</td>
                    <td>@order.Description</td>
                    <td>@order.Total.ToString("C")</td>
                </tr>
            }
        </tbody>
    </table>
</div>
